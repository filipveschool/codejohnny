<?xml version="1.0" encoding="UTF-8"?>
<template>
    <name>insertproc.xml</name>
    <description>
        MySQL Insert Stored Procedure
    </description>
    <dataclass>Tweet</dataclass>
    <datatable>z_tweets</datatable>
    <connection>mysql.codejohnnydb</connection>
    <properties>
        <property name="addId" value="true" type="java.lang.Boolean"
                  description="include Primary Id in loop pattern"/>
        <property name="outId" value="false" type="java.lang.Boolean"
                  description="return inserted record ID"/>
        <property name="outIdName" value="user_id"
                  description="return inserted record ID"/>
    </properties>
    <methods>
        <method name="paramloop" method="paramLoop" type="com.codejohnny.templates.sql.InsertProc"
                pattern="IN p_retweet_count INT,"/>
        <method name="insertloop" method="insertLoop" type="com.codejohnny.templates.sql.InsertProc"
                pattern="id,\n tweet_text,\n..."/>
        <method name="valueloop" method="valueLoop" type="com.codejohnny.templates.sql.InsertProc"
                pattern="p_id,\n p_tweet_text,\n..."/>
    </methods>
    <content><![CDATA[

DROP PROCEDURE IF EXISTS p_{lowerpluraldataclass}_insert;
CREATE PROCEDURE p_{lowerpluraldataclass}_insert(
    {{~paramloop}}
)
 BEGIN
	INSERT INTO {lowerpluraldataclass} (
	{{~insertloop}}
	)
VALUES
	(
	{{~valueloop}}
	);

SET out_{outIdName} = LAST_INSERT_ID();

END;
]]>
    </content>
</template>
